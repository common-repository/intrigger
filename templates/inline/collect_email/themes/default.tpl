<div id="int_inline_scenario" class="int_indget_inline_collect_default" style="background-color: {{background_color}};">
    <div class="int_indget_inline_collect_default_title" style="font-size: {{headline_fontsize}}px; color: {{headline_font_color}}; ">
        {{headline}}
    </div>
    <div class="int_indget_inline_collect_default_content">
        <input type="email" class="itrr_collect_email" id="itrr_collect_email_{{indget_id}}_{{post_id}}" placeholder="{{input_preview}}"><a href="javascript:void(0);" itrr-btn="inline_collect" itrr-indget-id="{{indget_id}}" itrr-post-id="{{post_id}}" itrr_scenario_id="{{scenario_id}}" target="_blank" style="color:{{button_font_color}}; background-color: {{button_background_color}};">{{button_label}}</a>
    </div>
    <div class="int_indget_inline_collect_brand_url" style="display: {{show_brand}}">
        <a href="{{brand_url}}"  title = "{{brand_title}}" target="_blank" style="color: #888888; font-size: 0.7em">
            Powered by InTrigger
        </a>
    </div>
    <div class="clearfix"></div>
</div>
