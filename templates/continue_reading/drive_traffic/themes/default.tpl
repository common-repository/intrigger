<div class="int_indget_continue_drive_default" style="background-color: {{background_color}};">
    <div class="int_indget_continue_drive_default_title" style="font-size: {{headline_fontsize}}px; color: {{headline_font_color}}; ">
        {{headline}}
    </div>
    <div class="int_indget_continue_drive_default_content">
        <div class="int_indget_continue_drive_default_message">
            {{message_body}}
        </div>
        <div class="int_indget_continue_drive_default_button_area">
            <a href="{{button_link}}" itrr-btn="continue" itrr-indget-id="{{indget_id}}" itrr-post-id="{{post_id}}" itrr_scenario_id="{{scenario_id}}" target="_blank" style="color:{{button_font_color}}; background-color: {{button_background_color}};">{{button_label}}</a>
        </div>
    </div>
    <div class="int_indget_continue_drive_brand_url" style="display: {{show_brand}}">
        <a href="{{brand_url}}"  title = "{{brand_title}}" target="_blank" style="color: #888888; font-size: 0.7em">
            Powered by InTrigger
        </a>
    </div>
    <div class="clearfix"></div>
</div>